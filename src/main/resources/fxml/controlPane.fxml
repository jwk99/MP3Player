<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.javastart.mp3player.controller.ControlPaneController">
   <children>
      <HBox alignment="CENTER_LEFT">
      
                  <Button id="prev" fx:id="previousButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
                  <ToggleButton id="play" fx:id="playButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
                  <Button id="next" fx:id="nextButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" HBox.hgrow="NEVER" />
                  <Slider fx:id="volumeSlider" prefHeight="14.0" prefWidth="75.0" HBox.hgrow="NEVER">
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
         </Slider>
                  <Slider fx:id="progressSlider" prefHeight="14.0" prefWidth="173.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets left="1.0" right="10.0" />
            </HBox.margin>
         </Slider>
      </HBox>
       <TextField fx:id="messageTextField" alignment="CENTER" editable="false" text="Mp3Player v1.0" />
   </children>
</VBox>
